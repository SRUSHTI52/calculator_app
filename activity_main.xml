<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#C7CCED"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/enter"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_margin="8dp"
        android:gravity="end"
        android:hint="0"
        android:textColor="#03071E"
        android:textColorHint="#03071E"
        android:textSize="32sp"
        android:fontFamily="@font/roboto_bold"/>

    <TextView
        android:id="@+id/ans"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_margin="8dp"
        android:fontFamily="@font/roboto_bold"
        android:gravity="end"
        android:hint="0"
        android:textColorHint="#03071E"
        android:textColor="#03071E"
        android:textSize="32sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/add"
            android:layout_width="65dp"
            android:layout_height="80dp"
            android:text="+"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:backgroundTint="#0C1547"
            app:cornerRadius="16dp"
            android:elevation="4dp"
            android:layout_marginEnd="7dp"
            app:rippleColor="@android:color/holo_blue_light" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sub"
            android:layout_width="65dp"
            android:layout_height="80dp"
            android:text="-"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:backgroundTint="#0C1547"
            app:cornerRadius="16dp"
            android:elevation="4dp"
            android:layout_marginEnd="7dp"
            app:rippleColor="@android:color/holo_blue_light" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/equal"
            android:layout_width="65dp"
            android:layout_height="80dp"
            android:text="="
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:backgroundTint="#F63B00"
            app:cornerRadius="34dp"
            android:elevation="4dp"
            android:layout_marginEnd="10dp"
            app:rippleColor="@android:color/holo_orange_dark" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mul"
            android:layout_width="65dp"
            android:layout_height="80dp"
            android:text="*"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:backgroundTint="#0C1547"
            app:cornerRadius="16dp"
            android:elevation="4dp"
            android:layout_marginEnd="7dp"
            app:rippleColor="@android:color/holo_blue_light" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/div"
            android:layout_width="65dp"
            android:layout_height="80dp"
            android:text="/"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:backgroundTint="#0C1547"
            app:cornerRadius="16dp"
            android:elevation="4dp"
            app:rippleColor="@android:color/holo_blue_light" />
    </LinearLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="4"
        android:rowCount="4"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="16dp">
        <!-- Row 2 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/seven"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="7"
            android:textColor="#03071E"
            android:textSize="24sp"
            app:backgroundTint="#E1E3F1"
            app:cornerRadius="16dp"
            android:elevation="2dp"
            android:layout_marginEnd="10dp"
            app:rippleColor="@android:color/darker_gray" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/eight"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="8"
            android:textColor="#03071E"
            android:textSize="24sp"
            app:backgroundTint="#E1E3F1"
            app:cornerRadius="16dp"
            android:elevation="2dp"
            android:layout_marginEnd="10dp"
            app:rippleColor="@android:color/darker_gray" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/nine"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="9"
            android:textColor="#03071E"
            android:textSize="24sp"
            app:backgroundTint="#E1E3F1"
            app:cornerRadius="16dp"
            android:elevation="2dp"
            android:layout_marginEnd="10dp"
            app:rippleColor="@android:color/darker_gray" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/dot"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="."
            android:textColor="@color/white"
            android:textSize="24sp"
            app:backgroundTint="#0C1547"
            app:cornerRadius="16dp"
            android:elevation="2dp"
            app:rippleColor="@android:color/holo_blue_light" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/four"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="4"
            android:textColor="#03071E"
            android:textSize="24sp"
            app:backgroundTint="#E1E3F1"
            app:cornerRadius="16dp"
            android:elevation="2dp"
            android:layout_marginEnd="10dp"
            app:rippleColor="@android:color/darker_gray" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/five"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="5"
            android:textColor="#03071E"
            android:textSize="24sp"
            app:backgroundTint="#E1E3F1"
            app:cornerRadius="16dp"
            android:elevation="2dp"
            android:layout_marginEnd="10dp"
            app:rippleColor="@android:color/darker_gray" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/six"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="6"
            android:textColor="#03071E"
            android:textSize="24sp"
            app:backgroundTint="#E1E3F1"
            app:cornerRadius="16dp"
            android:elevation="2dp"
            android:layout_marginEnd="10dp"
            app:rippleColor="@android:color/darker_gray" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/backspace"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="âŒ«"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:backgroundTint="#0C1547"
            app:cornerRadius="16dp"
            android:elevation="4dp"
            app:rippleColor="@android:color/holo_blue_light" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/one"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="1"
            android:textColor="#03071E"
            android:textSize="24sp"
            app:backgroundTint="#E1E3F1"
            app:cornerRadius="16dp"
            android:layout_marginEnd="10dp"
            android:elevation="2dp"
            app:rippleColor="@android:color/darker_gray" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/two"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="2"
            android:textColor="#03071E"
            android:textSize="24sp"
            app:backgroundTint="#E1E3F1"
            app:cornerRadius="16dp"
            android:elevation="2dp"
            android:layout_marginEnd="10dp"
            app:rippleColor="@android:color/darker_gray" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/three"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="3"
            android:textColor="#03071E"
            android:textSize="24sp"
            app:backgroundTint="#E1E3F1"
            app:cornerRadius="16dp"
            android:layout_marginEnd="10dp"
            android:elevation="2dp"
            app:rippleColor="@android:color/darker_gray" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/clear"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="C"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:backgroundTint="#0C1547"
            app:cornerRadius="16dp"
            android:elevation="4dp"
            app:rippleColor="@android:color/holo_blue_light" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/zero"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="2"
            android:layout_columnSpan="4"
            android:text="0"
            android:textColor="#03071E"
            android:textSize="24sp"
            app:backgroundTint="#E1E3F1"
            app:cornerRadius="16dp"
            android:elevation="2dp"
            android:layout_marginEnd="10dp"
            app:rippleColor="@android:color/darker_gray" />
    </GridLayout>
</LinearLayout>
